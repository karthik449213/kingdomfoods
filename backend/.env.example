# Backend Environment Variables Template
# Copy this to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_ORIGIN=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/kingdomfoods

# PhonePe Payment Gateway (REMOVED - Using COD only)
# PHONEPE_ENV=development
# PHONEPE_MERCHANT_ID=your_merchant_id_here
# PHONEPE_SALT_KEY=your_salt_key_here
# PHONEPE_SALT_INDEX=1

# WhatsApp Notifications via Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155552671

# WhatsApp Template Messages (pre-approved templates)
# Make sure these templates are created and approved in WhatsApp Business Manager
WHATSAPP_TEMPLATE_ORDER_CONFIRMATION=order_confirmation
WHATSAPP_TEMPLATE_ORDER_KITCHEN=new_order_kitchen
WHATSAPP_TEMPLATE_DELIVERY_ASSIGNMENT=delivery_assignment
WHATSAPP_TEMPLATE_ORDER_STATUS=order_status_update
WHATSAPP_TEMPLATE_DELIVERY_COMPLETED=delivery_completed

# Staff Phone Numbers (comma-separated)
KITCHEN_STAFF_PHONES=919876543210,919876543211
DELIVERY_STAFF_PHONES=919876543220,919876543221
OWNER_PHONE=919876543200

# Redis (for optional caching and real-time events)
REDIS_URL=redis://localhost:6379

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Optional: n8n Integration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/orders
N8N_API_KEY=your_n8n_api_key

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
